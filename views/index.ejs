                <span aria-hidden="true">&laquo;</span>
            </a>
        </li>

        <% }
         for(var i=0;i<totalpage;i++){
            if(i+1==pageNum){
                %>
                    <li><a href="javascript:;" style="z-index: 2;color: #23527c;background-color: #eee;border-color: #ddd;"><%=pageNum%></a></li>

        <%
            }else{
             %>
             <li><a href="/articles/list/<%=i+1%>/<%=pageSize%>?keyworld=<%=keyworld%>"><%=i+1%></a></li>
        <%}
         }
            if(pageNum<totalpage){
          %>
        <li>
            <a href="/articles/list/<%=pageNum+1%>/<%=pageSize%>?keyworld=<%=keyworld%>" aria-label="Next">
