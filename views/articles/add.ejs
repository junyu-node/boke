<% include ../include/head%>
<link rel="stylesheet" href="/js/wangEditor.css">
<form action="/articles/add" method="post" enctype="multipart/form-data">
    <input type="hidden" value="<%=article._id%>" name="id">
    <div class="form-group">
        <label for="title">标题</label>
        <input type="text" id="title" value="<%=article.title%>" name="title" class="form-control" placeholder="请输入标题">
    </div>
    <div class="form-group">
        <label for="content">内容</label>
        <textarea name="content" id="content" cols="30" rows="10" placeholder="请输入内容"><%=article.content%></textarea>
    </div>

    <div class="form-group">
        <label for="titleimg">头像</label>

        <input type="file" name="titleimg">
    </div>
    <button type="submit" class="btn btn-default">提交</button>
</form>



<% include ../include/foot%>
<script src="/js/wangEditor.js"></script>
<script>
    $(function(){
        $('#content').wangEditor();
    });
</script>